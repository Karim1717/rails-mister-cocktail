<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
<h1> Your cocktails </h1>
  <%= link_to "#", class: "navbar-brand" do %>
  <i class="fas fa-cocktail"></i>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", "#", class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="container mt-3 w-100">
  <div class="row">
    <div class="col-12 d-flex d-flex flex-wrap justify-content-center">
      <% @cocktails.each do |cocktail| %>
        <div class="col-4 cocktail-card rounded m-3">
          <div class="cocktail-card-img">
            <%= link_to cocktail_path(cocktail) do %>
              <%= image_tag "#{cocktail.image_url}", alt: "image-cocktail", class: "w-100" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<br>
<p> <%= link_to'Add a new cocktail', new_cocktail_path %></p>
